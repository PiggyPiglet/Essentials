$C = "../Common.ui";
Button {
  LayoutMode: Top;
  Anchor: (Left: 2, Right: 2, Bottom: 5, Height: 60, Width: 400);
  Background: $C.@InputBoxBackground;
  Padding: (Top: 8, Bottom: 8);
  Style: ButtonStyle(
    Sounds: $C.@ButtonSounds,
  );

  Label #Name {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #93844c,
      HorizontalAlignment: Center
    );
  }

  Label #Status {
    Style: (
      FontSize: 12,
      TextColor: #96a9be,
      HorizontalAlignment: Center
    );
    Anchor: (Top: 4);
  }
}